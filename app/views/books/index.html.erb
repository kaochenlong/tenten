<h1>書本列表</h1>

<%= link_to "新增書本", new_book_path %>

<ul>
<% @books.each do |book| %>
  <li>
    <%= link_to book.title, book %>
    <%= link_to "編輯", edit_book_path(book) %>
    <%= link_to "刪除", book, 
                        method: 'delete', 
                        data: {confirm: '確定嗎?'} %>
  </li>
<% end %>
</ul>
